<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/piggy_pink"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="224dp"
            android:layout_height="182dp"
            android:src="@drawable/piggypal_logo_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Welcome to PiggyPal, Your best friend when it comes to anything budget related! To get started please Sign in or Create an account below. "
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="330dp"
            android:layout_height="wrap_content"

            android:text="Sign In" />

        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="330dp"
            android:layout_height="wrap_content"

            android:text="Create Account" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>