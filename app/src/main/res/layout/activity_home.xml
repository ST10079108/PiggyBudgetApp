<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/piggy_pink"
    tools:context=".HomeActivity">

    <!-- Main content with Toolbar and your layout -->

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Toolbar -->

        <!-- Your existing layout content -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Insert your current ConstraintLayout here -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ScrollView
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingBottom="45dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:background="@color/piggy_white"
                                app:cardCornerRadius="15dp">

                                <TextView
                                    android:id="@+id/tvUsername"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="Username"
                                    android:textAlignment="center"
                                    android:textSize="20sp" />
                            </androidx.cardview.widget.CardView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:layout_weight="1" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvPiggy"
                                android:layout_width="match_parent"
                                android:layout_height="400dp"
                                android:layout_gravity="center_horizontal"
                                app:cardCornerRadius="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivPiggy"
                                        android:layout_width="241dp"
                                        android:layout_height="245dp"
                                        app:srcCompat="@drawable/grinning" />

                                    <TextView
                                        android:id="@+id/etPiggy"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:ems="10"
                                        android:gravity="center_horizontal"
                                        android:inputType="textMultiLine"
                                        android:paddingHorizontal="50dp"
                                        android:text="Welcome to PIGGY PAL! This is the home screen. Scroll down or press DONE to see your balance and achievements." />

                                    <Button
                                        android:id="@+id/btnDone"
                                        android:layout_width="100dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="25dp"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="DONE"
                                        android:textSize="15sp" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:layout_weight="1" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                app:cardCornerRadius="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="15dp" />

                                    <TextView
                                        android:id="@+id/txtBalance"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="Balance"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/tvBalanceAmount"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="R0"
                                        android:textSize="20sp" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="15dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtIncome"
                                            android:layout_width="165dp"
                                            android:layout_height="match_parent"
                                            android:gravity="center_horizontal|center_vertical"
                                            android:text="Income" />

                                        <TextView
                                            android:id="@+id/tvIncomeAmount"
                                            android:layout_width="165dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal|center_vertical"
                                            android:text="R0" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtExpenses"
                                            android:layout_width="165dp"
                                            android:layout_height="match_parent"
                                            android:gravity="center_horizontal|center_vertical"
                                            android:text="Expenses" />

                                        <TextView
                                            android:id="@+id/tvExpensesAmount"
                                            android:layout_width="165dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal|center_vertical"
                                            android:text="R0" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtGoal"
                                            android:layout_width="165dp"
                                            android:layout_height="match_parent"
                                            android:gravity="center_horizontal|center_vertical"
                                            android:text="Goal" />

                                        <TextView
                                            android:id="@+id/tvGoalAmount"
                                            android:layout_width="165dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal|center_vertical"
                                            android:text="Unset" />
                                    </LinearLayout>

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="15dp" />
                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="15dp" />


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:id="@+id/textView5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:text="Your Goal Progress"
                                        android:textColor="@color/piggy_black"
                                        android:textSize="20sp" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp" />

                                    <ProgressBar
                                        android:id="@+id/progressBar2"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="15dp" />

                                    <TextView
                                        android:id="@+id/tvGoalProgress1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:text="Above is your goal progression, it displays how much of your total goal you've spent so far. "
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/tvGoalProgress2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingBottom="15dp"
                                        android:text="HINT: you dont want it to fill :)"
                                        android:textColor="@color/piggy_black" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="15dp" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvGoal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="15dp" />

                                    <TextView
                                        android:id="@+id/tvMin"
                                        android:layout_width="262dp"
                                        android:layout_height="wrap_content"
                                        android:text="Minimum Amount"
                                        android:textAlignment="textStart"

                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/etMin"
                                        android:layout_width="266dp"
                                        android:layout_height="52dp"
                                        android:layout_marginBottom="15dp"

                                        android:ems="10"
                                        android:hint="R2000"
                                        android:inputType="number"
                                        android:paddingLeft="10dp" />

                                    <TextView
                                        android:id="@+id/tvMax"
                                        android:layout_width="262dp"
                                        android:layout_height="wrap_content"
                                        android:text="Maximum Amount"
                                        android:textAlignment="textStart"

                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/etMax"
                                        android:layout_width="266dp"
                                        android:layout_height="52dp"
                                        android:layout_marginBottom="15dp"

                                        android:ems="10"
                                        android:hint="R6000"
                                        android:inputType="number"
                                        android:paddingLeft="10dp" />

                                    <Button
                                        android:id="@+id/btnSaveGoal"
                                        android:layout_width="180dp"
                                        android:layout_height="50dp"

                                        android:text="Save"
                                        android:textSize="15sp" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="15dp" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="15dp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_horizontal"
                                        android:text="Achievements"
                                        android:textColor="@color/piggy_black"
                                        android:textSize="20sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/imageView3"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_marginEnd="8dp"
                                            app:srcCompat="@drawable/bronze" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="4dp"
                                                android:text="Bronze - Add a goal"
                                                android:textSize="16sp"
                                                android:textStyle="bold" />

                                            <ProgressBar
                                                android:id="@+id/pbBronze"
                                                style="?android:attr/progressBarStyleHorizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="16dp"
                                                android:max="1"
                                                android:progress="0" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/imageView4"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_marginEnd="8dp"
                                            app:srcCompat="@drawable/silver" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="4dp"
                                                android:text="Silver - Create 5 budgets"
                                                android:textSize="16sp"
                                                android:textStyle="bold" />

                                            <ProgressBar
                                                android:id="@+id/pbSilver"
                                                style="?android:attr/progressBarStyleHorizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="16dp"
                                                android:max="1"
                                                android:progress="0" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/imageView5"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_marginEnd="8dp"
                                            app:srcCompat="@drawable/gold" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="4dp"
                                                android:text="Gold - Make 5 transactions"
                                                android:textSize="16sp"
                                                android:textStyle="bold" />

                                            <ProgressBar
                                                android:id="@+id/pbGold"
                                                style="?android:attr/progressBarStyleHorizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="16dp"
                                                android:max="1"
                                                android:progress="0" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/imageView6"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_marginEnd="8dp"
                                            app:srcCompat="@drawable/elite" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="4dp"
                                                android:text="Elite - Create 10 categories"
                                                android:textSize="16sp"
                                                android:textStyle="bold" />

                                            <ProgressBar
                                                android:id="@+id/pbElite"
                                                style="?android:attr/progressBarStyleHorizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="16dp"
                                                android:max="1"
                                                android:progress="0" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="15dp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="75dp" />

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:itemIconTint="@null"
        app:itemPaddingBottom="0dp"
        app:itemPaddingTop="0dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation_bar" />

    <!-- Navigation Drawer -->

</androidx.constraintlayout.widget.ConstraintLayout>