<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="TransactionDate"

                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llAmount"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTransactionType"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Expense"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTransactionCategory"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Groceries"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTransactionAmount"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="R3000.00"

                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRecurring"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Recurring:"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTransactionRecurrence"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="No"

                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTransactionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Description"

                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivTransactionImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Transaction Image"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>