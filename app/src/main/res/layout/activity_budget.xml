<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/piggy_pink"
    android:orientation="vertical"
    tools:context=".BudgetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="262dp"
                    android:layout_height="61dp"
                    android:gravity="center"
                    android:text="Budget"
                    android:textAlignment="center"

                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"

                    android:gravity="center"
                    android:text="Create Budget"
                    android:textAlignment="center"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAlignment="textStart"

                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etBudgetName"
                    android:layout_width="266dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="15dp"

                    android:ems="10"
                    android:hint="Groceries Budget"
                    android:inputType="text"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textAlignment="textStart"

                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="266dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="15dp"

                    android:ems="10"
                    android:hint="R3,000"
                    android:inputType="number"
                    android:paddingLeft="10dp" />


                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textAlignment="textStart"

                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etCategory"
                    android:layout_width="266dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="15dp"

                    android:clickable="true"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Groceries"
                    android:inputType="none"
                    android:paddingLeft="10dp" />


                <Button
                    android:id="@+id/btnSelectCategory"
                    android:layout_width="180dp"
                    android:layout_height="60dp"

                    android:text="Select Category"
                    android:textSize="15sp" />

                <!--                <TextView-->
                <!--                    android:id="@+id/textView222"-->
                <!--                    android:layout_width="262dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Start"-->
                <!--                    android:textAlignment="textStart"-->

                <!--                    android:textSize="16sp"-->
                <!--                    android:textStyle="bold" />-->

                <!--                <EditText-->
                <!--                    android:id="@+id/editTextText4"-->
                <!--                    android:layout_width="266dp"-->
                <!--                    android:layout_height="52dp"-->
                <!--                    android:layout_marginBottom="15dp"-->

                <!--                    android:ems="10"-->
                <!--                    android:hint="january"-->
                <!--                    android:inputType="text"-->
                <!--                    android:paddingLeft="10dp" />-->

                <Button
                    android:id="@+id/btnAddBudget"
                    android:layout_width="180dp"
                    android:layout_height="60dp"

                    android:text="Add"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnMyBudgets"
                    android:layout_width="180dp"
                    android:layout_height="60dp"

                    android:text="My Budgets"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</LinearLayout>